{
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "js"],
  "transform": {
    "\\.(ts|tsx)$": "ts-jest"
  },
  "roots": ["<rootDir>/test", "<rootDir>/src"],
  "testRegex": ".*\\.test\\.ts$",
  "moduleNameMapper": {
    "^domain/(.*)$": "<rootDir>/src/domain/$1",
    "^services/(.*)$": "<rootDir>/src/services/$1",
    "^infrastucture/(.*)$": "<rootDir>/src/infrastucture/$1"
  }
}
